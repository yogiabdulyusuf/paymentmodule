<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_monthly_billing_template">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Billing Parking Report</h2>
                        </div>

                        <table  class="table table-condensed">

                            <thead><tr>
                                <th>UNIT #</th>
                                <th>DATE</th>
                                <th>DESCRIPTION</th>
                                <th>AMOUNT</th>
                            </tr></thead>
                            <tbody>
                                <t t-set="total_harga" t-value="0" />

                                <tr t-foreach='monthlybilling' t-as='line'>
                                    <td><t t-esc="line['unitno']" /></td>
                                    <td><t t-esc="line['date_trans']" /></td>
                                    <td><t t-esc="line['description']" /></td>
                                    <td class="text-right"><t t-esc="line['amount']" /></td>
                                    <t t-set="total_harga" t-value="total_harga + line['amount']"/>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td><strong>Total </strong></td>
                                    <td class="text-right">
                                        <span t-esc="total_harga" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <br/>
                        <br/>

                        <div class="row text-center">
                            <div class="col-xs-3">
                                <div class="row">
                                    <span>PREPARED BY,</span>
                                </div>
                                <div class="row">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                </div>
                                <div class="row">
                                    <span>(...................................)</span>
                                </div>
                                <div class="row">
                                    <span>FRONT OFFICE</span>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="row">
                                    <span>CHECKED BY,</span>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6">
                                         <div class="row">
                                            <br/>
                                            <br/>
                                            <br/>
                                            <br/>
                                        </div>
                                        <div class="row">
                                            <span>(...................................)</span>
                                        </div>
                                         <div class="row">
                                            <span>FRONT OFFICE MGR.</span>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="row">
                                            <br/>
                                            <br/>
                                            <br/>
                                            <br/>
                                        </div>
                                        <div class="row">
                                            <span>(...................................)</span>
                                        </div>
                                        <div class="row">
                                            <span>ASST. MGR. ADMINISTRATION</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="row">
                                    <span>APPROVED BY,</span>
                                </div>
                                <div class="row">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                </div>
                                <div class="row">
                                    <span>(...................................)</span>
                                </div>
                                <div class="row">
                                    <span> GENERAL MANAGER</span>
                                </div>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>