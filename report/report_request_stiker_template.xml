<odoo>
    <data>
    
    <template id="report_request_stiker">
        
        <!-- <t t-call="report.external_layout"> -->
            <div class="page">
                <div class="oe_structure"/>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12">
                                <center><h2>PAYMENT RECEIPT</h2></center>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4">
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4">
                                <h3>Nomor: <span t-field="o.trans_stiker_id"/></h3>
                            </div>
                            <div class="col-sm-8">
                                <table>
                                    <tr><td>Unit #</td><td><span t-field="o.unit_kerja"/></td></tr>
                                    <tr><td>No Trans</td><td> <span t-field="o.sticker_id"/> </td></tr>
                                    <tr><td>Date</td><td> <span t-field="o.tanggal"/></td></tr>
                                    <tr><td>Plate Number</td><td> <span t-field="o.nopol"/></td></tr>
                                    <tr><td>Paymen Method</td><td> <span t-field="o.val_cara_bayar"/></td></tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4">
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="text-center">DESCRIPTION</th>
                                        <th class="text-right">AMOUNT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="o.perpanjang == true">
                                        <tr> <!--  t-foreach="o.spm_line_ids" t-as="l"   -->
                                            <td>Langganan</td>
                                            <td class="text-right"><span t-field="o.amount" /></td>
                                        </tr>
                                    </t>
                                    <t t-if="o.beli_stiker == true">
                                        <tr> <!--  t-foreach="o.spm_line_ids" t-as="l"   -->
                                            <td>Stiker</td>
                                            <td class="text-right"><span t-field="o.harga_beli_stiker" /></td>
                                        </tr>
                                    </t>
                                    <t t-if="o.ganti_nopol == true">
                                        <tr> <!--  t-foreach="o.spm_line_ids" t-as="l"   -->
                                            <td>Pergantian Nomor Polisi</td>
                                            <td class="text-right"><span t-field="o.harga_ganti_nopol" /></td>
                                        </tr>
                                    </t>
                                    <t t-if="o.kartu_hilang == true">
                                        <tr> <!--  t-foreach="o.spm_line_ids" t-as="l"   -->
                                            <td>Kartu Hilang</td>
                                            <td class="text-right"><span t-field="o.harga_kartu_hilang" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                        <tr class="border-black">
                                            <td><strong>Total </strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-8 pull-center">
                                    <table>
                                        <tr><td>Resident</td><td>Front Office</td><td>Cashier</td></tr>
                                        <tr><td> </td><td> </td><td> </td></tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <!-- </t> -->

    </template>

    <template id="report_requeststiker">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="paymentmodule.report_request_stiker"/>
            </t>
        </t>
    </template>
    </data>
</odoo>